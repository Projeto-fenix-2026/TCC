<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Perfil</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background-color: #f4eef7; /* lilás claro */
      font-family: Arial, sans-serif;
    }

    .profile-card {
      max-width: 420px;
      background-color: #f4eef7;
      padding: 30px 20px;
      margin: 30px auto;
      border-radius: 12px;
    }

    .avatar {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      display: block;
      margin: 0 auto 30px;
    }

    .info-item {
      display: flex;
      align-items: flex-start;
      margin-bottom: 20px;
    }

    .info-item i {
      font-size: 22px;
      margin-right: 12px;
      color: #333;
    }

    .info-text strong {
      display: block;
      font-size: 15px;
    }

    .info-text span {
      font-size: 14px;
      color: #555;
    }
  </style>
</head>
<body>
  <div class="profile-card shadow-sm">
    <!-- Foto -->
    <img src="avatar.jpg" alt="Foto de perfil" class="avatar">

    <!-- Nome -->
    <div class="info-item">
      <i class="bi bi-person"></i>
      <div class="info-text">
        <strong>Nome</strong>
        <span>Luiza</span>
      </div>
    </div>

    <!-- Sobre -->
    <div class="info-item">
      <i class="bi bi-info-circle"></i>
      <div class="info-text">
        <strong>Sobre</strong>
        <span>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</span>
      </div>
    </div>

    <!-- Telefone -->
    <div class="info-item">
      <i class="bi bi-telephone"></i>
      <div class="info-text">
        <strong>Telefone</strong>
        <span>+55 99 99999 - 9999</span>
      </div>
    </div>

    <!-- Email -->
    <div class="info-item">
      <i class="bi bi-envelope"></i>
      <div class="info-text">
        <strong>Email</strong>
        <span>luisa99999@gmail.com</span>
      </div>
    </div>

    <!-- Profissão -->
    <div class="info-item">
      <i class="bi bi-person-badge"></i>
      <div class="info-text">
        <strong>Profissão</strong>
        <span>Ginecologista</span>
      </div>
    </div>

    <!-- Clínica -->
    <div class="info-item">
      <i class="bi bi-hospital"></i>
      <div class="info-text">
        <strong>Clínica</strong>
        <span>Eduarda clínica</span>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>